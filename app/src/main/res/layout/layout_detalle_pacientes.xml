<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp">

    <TextView
        android:id="@+id/layoutDetallePacientes_pacienteTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:textStyle="bold"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/layoutDetallePacientes_sintomasTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/layoutDetallePacientes_pacienteTextView"/>

    <TextView
        android:id="@+id/layoutDetallePacientes_atendidoTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/layoutDetallePacientes_pacienteTextView"
        android:layout_alignParentEnd="true" />

</RelativeLayout>